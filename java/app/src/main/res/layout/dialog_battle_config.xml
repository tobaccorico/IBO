_<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dialog Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎤 Configure Battle Challenge"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Challenged User -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Twitter Username to Challenge"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etChallengedUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Battle Message -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Battle Challenge Message"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etBattleMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:maxLength="200" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Stake Amount -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stake Amount (micro USD*)"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etStakeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Battle Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battle Type"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerBattleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Battle Window Configuration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏰ Battle Window"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Quick Duration Selection -->
        <CheckBox
            android:id="@+id/cbQuickDurations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use quick duration presets"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgQuickDurations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb1Hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1h"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb6Hours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6h"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/rb24Hours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24h"
                android:textSize="12sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb7Days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7d"
                android:textSize="12sp" />
        </RadioGroup>

        <!-- Custom Time Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSetStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📅 Set Start Time"
                android:enabled="false"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvBattleWindowStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start: Loading..."
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSetEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📅 Set End Time"
                android:enabled="false"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvBattleWindowEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End: Loading..."
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvWindowDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: Loading..."
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center" />
        </LinearLayout>

        <!-- Battle Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Battle Settings"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Public Battle"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchPublicBattle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnCreateBattle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🎤 Create Battle"
                android:layout_marginStart="8dp"
                android:backgroundTint="@android:color/holo_red_dark" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>