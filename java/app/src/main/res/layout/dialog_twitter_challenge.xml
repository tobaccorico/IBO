<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Dialog Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”¥ Challenge a Rapper"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="24dp" />

    <!-- Challenge Target -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who do you want to battle?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_challenged_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@username (without @)"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Stake Amount -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’° Stake Amount (USD worth of tokens)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_stake_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="100"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Verses Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¤ Your Verses (edit if needed)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="300dp">

        <LinearLayout
            android:id="@+id/ll_verse_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- Character Count Display -->
    <TextView
        android:id="@+id/tv_character_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0 chars across 0 verses"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/teal_700" />

    <!-- Status and Progress -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to challenge!"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_background"
        android:padding="12dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_generate_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŽ¬ Generate Video"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_challenge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”¥ Post Challenge"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>