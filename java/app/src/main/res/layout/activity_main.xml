<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header with Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Basketball emoji for Solana wallet connection -->
            <Button
                android:id="@+id/btn_wallet_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏀"
                android:textSize="24sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

            <!-- App Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RE-CHAT"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/purple_500" />

            <!-- Twitter/Profile dropdown -->
            <Button
                android:id="@+id/btn_profile_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡"
                android:textSize="24sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Battle Timer and Verse Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_battle_timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:00 / 2:20"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/rounded_background"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tv_verse_indicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verse 1/4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- YouTube URL Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_youtube_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter YouTube URL for beat"
                android:inputType="textUri" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Download Button -->
        <Button
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎵 Extract Beat Stream"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ready for Re-Chat"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_background"
            android:padding="12dp" />

        <!-- Battle Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_start_battle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🎤 Start Battle"
                android:layout_marginEnd="4dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btn_stop_battle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⏹️ Stop"
                android:layout_marginStart="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Library and Action Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_my_library"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📚 My Battles"
                android:layout_marginEnd="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_play_recording"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="▶️ Play"
                android:layout_marginStart="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Twitter Challenge Button -->
        <Button
            android:id="@+id/btn_twitter_challenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔥 Challenge on Twitter"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="@color/purple_700" />

        <!-- Real-time Transcription Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Live Transcription:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_transcribed_lyrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:textSize="16sp"
            android:gravity="top"
            android:layout_marginBottom="16dp"
            android:text=""
            android:hint="Your bars will appear here as you spit them..." />

        <!-- Editable Lyrics -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✏️ Edit Your Verses:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit your bars here (max 140 chars per verse)..."
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Character Count Helper -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Keep each verse under 140 characters for Twitter!"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/teal_700" />

    </LinearLayout>

</ScrollView>